<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    tools:context=".screens.MovieFragment">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".screens.MovieFragment">

    <ImageView
        android:id="@+id/poster"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:src="@tools:sample/backgrounds/scenic" />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Title"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/poster"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/rating_kinopoisk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginRight="1dp"
        android:text="6.9"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintRight_toLeftOf="@id/title_alternative"
        />
    <TextView
        android:id="@+id/title_alternative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Title alternative"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/year_and_genres_seasons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Year, ganres, seasons"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/title_alternative"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/countries_duration_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Countries, Duration, Age"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/year_and_genres_seasons"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/description"
        android:maxLines="4"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="3dp"
        android:text="Допустим, есть TextView, состоящий из 20 строк. Я же хочу, чтобы в Activity отображалась только часть (например, 3 строчки), а остальное появлялось в этом же Activity при нажатии на текст. Как это можно сделать? Я знаю, что это можно сделать, обрезав текст и обработать нажатие на TextView, показав при нажатии текст полностью. А есть ли другие инструменты (может быть, что-то есть уже встроенное)?Допустим, есть TextView, состоящий из 20 строк. Я же хочу, чтобы в Activity отображалась только часть (например, 3 строчки), а остальное появлялось в этом же Activity при нажатии на текст. Как это можно сделать? Я знаю, что это можно сделать, обрезав текст и обработать нажатие на TextView, показав при нажатии текст полностью. А есть ли другие инструменты (может быть, что-то есть уже встроенное)?"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/countries_duration_age"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/rating_kinopoisk_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Рейтинг Кинопоиска"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/rating_kinopoisk_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:contentPadding="20dp"
        app:layout_constraintTop_toBottomOf="@id/rating_kinopoisk_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:cardBackgroundColor="#8E8B8B"
        app:cardCornerRadius="5dp"
        >
        <TextView
            android:id="@+id/kinopoisk_votes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8.4"
            android:textSize="35sp"
            android:gravity="center_vertical|center_horizontal|top"
            />
        <TextView
            android:id="@+id/rating_kinopoisk_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="314 346 оценок"
            android:layout_marginTop="50dp"
            android:textSize="15sp"
            android:gravity="center_vertical|center_horizontal|top"
            />



    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>